#!/bin/bash
apt install wget -y

wget https://raw.githubusercontent.com/devedaniele/XenOS/main/.debian/.bash_aliases

bash .bash_aliases

update

apt install gnupg curl -y

rm -rf /etc/apt/sources.list
echo "deb http://http.kali.org/kali kali-rolling main contrib non-free" > /etc/apt/sources.list

curl -sSL https://archive.kali.org/archive-key.asc | apt-key add
mv /etc/apt/trusted.gpg /etc/apt/trusted.gpg.d

apt-get update -y && apt-get dist-upgrade -y

apt install git gh nodejs sudo build-essential -y

rm .bashrc
rm /etc/bash.bashrc
curl -sSL https://raw.githubusercontent.com/devedaniele/XenOS/main/.debian/bash.bashrc >> /etc/bash.bashrc
wget https://raw.githubusercontent.com/devedaniele/XenOS/main/.debian/.bashrc

sleep 1
exit